{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "react-app",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "babel"],
  "rules": {
    "indent": [0, "tab"],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "import/no-webpack-loader-syntax": 0
  }
}
